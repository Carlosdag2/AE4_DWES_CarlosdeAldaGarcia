@model IEnumerable<AE4_DWES_CarlosdeAldaGarcia.Models.Contenido>

@{
    ViewData["Title"] = "Resultados de búsqueda";
}

<h1><i class="bi bi-search text-danger"></i> Resultados de búsqueda</h1>
<p class="lead">Búsqueda: <strong>"@ViewBag.Termino"</strong></p>

@if (Model.Any())
{
    <p class="text-muted">Se encontraron @Model.Count() resultados</p>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-dark text-white">
                        @if (item.Tipo == AE4_DWES_CarlosdeAldaGarcia.Models.TipoContenido.Pelicula)
                        {
                            <i class="bi bi-camera-reels"></i>
                        }
                        else
                        {
                            <i class="bi bi-tv"></i>
                        }
                        @item.Tipo
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="text-muted mb-2">
                            <small>
                                <i class="bi bi-calendar"></i> @item.Anio |
                                <i class="bi bi-tag"></i> @item.Genero.Nombre
                            </small>
                        </p>
                        <p class="card-text small">@item.Descripcion.Substring(0, Math.Min(80, item.Descripcion.Length))...</p>
                        
                        @if (item.Valoraciones.Any())
                        {
                            var promedio = item.Valoraciones.Average(v => v.Puntuacion);
                            <p class="text-warning mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= promedio)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </p>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger w-100">
                            <i class="bi bi-info-circle"></i> Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> No se encontraron resultados para la búsqueda: <strong>"@ViewBag.Termino"</strong>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver al catálogo
    </a>
</div>
