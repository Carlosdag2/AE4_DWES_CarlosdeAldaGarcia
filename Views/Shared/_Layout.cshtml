<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StreamFlix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AE4_DWES_CarlosdeAldaGarcia.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #e50914;
            --primary-dark: #b20710;
            --secondary-color: #221f1f;
            --background-dark: #141414;
            --card-bg: #1f1f1f;
            --text-light: #ffffff;
            --text-muted: #b3b3b3;
            --hover-bg: #2f2f2f;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            height: 100%;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            background-attachment: fixed;
            color: var(--text-light);
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        /* ========== NAVBAR MODERNA ========== */
        .navbar {
            background: rgba(10, 10, 10, 0.98) !important;
            backdrop-filter: blur(20px);
            box-shadow: 0 4px 30px rgba(229, 9, 20, 0.2);
            padding: 0.75rem 0;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border-bottom: 1px solid rgba(229, 9, 20, 0.1);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1030;
        }

        .navbar.scrolled {
            background: rgba(10, 10, 10, 1) !important;
            box-shadow: 0 8px 40px rgba(229, 9, 20, 0.4);
            padding: 0.5rem 0;
            border-bottom-color: rgba(229, 9, 20, 0.3);
        }

        .navbar-brand {
            font-size: 1.75rem;
            font-weight: 700;
            background: linear-gradient(135deg, #e50914 0%, #ff4057 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
        }

        .navbar-brand i {
            background: linear-gradient(135deg, #e50914, #ff4057);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2rem;
            animation: rotate-icon 3s ease-in-out infinite;
        }

        @@keyframes rotate-icon {
            0%, 100% { transform: rotate(0deg); }
            25% { transform: rotate(-5deg); }
            75% { transform: rotate(5deg); }
        }

        .navbar-brand:hover {
            transform: scale(1.05);
            filter: brightness(1.3);
        }

        .navbar-toggler {
            border: 2px solid rgba(229, 9, 20, 0.5);
            padding: 0.5rem 0.75rem;
            transition: all 0.3s ease;
        }

        .navbar-toggler:hover {
            border-color: #e50914;
            background: rgba(229, 9, 20, 0.1);
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 0.2rem rgba(229, 9, 20, 0.5);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28229, 9, 20, 1%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .navbar-nav {
            gap: 0.5rem;
        }

        .nav-link {
            color: var(--text-light) !important;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.75rem 1.25rem !important;
            margin: 0 0.25rem;
            position: relative;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-link i {
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, #e50914, #ff4057);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            transform: translateX(-50%);
            border-radius: 3px 3px 0 0;
        }

        .nav-link:hover::before {
            width: 85%;
        }

        .nav-link:hover {
            color: #e50914 !important;
            background: rgba(229, 9, 20, 0.1);
            transform: translateY(-2px);
        }

        .nav-link:hover i {
            transform: scale(1.2);
            color: #e50914;
        }

        .nav-link.active {
            background: linear-gradient(135deg, rgba(229, 9, 20, 0.15), rgba(255, 64, 87, 0.15));
            color: #e50914 !important;
            border: 1px solid rgba(229, 9, 20, 0.3);
        }

        /* ========== WRAPPER PARA STICKY FOOTER ========== */
        .page-wrapper {
            flex: 1 0 auto;
            display: flex;
            flex-direction: column;
        }

        /* ========== CONTAINER PRINCIPAL ========== */
        .container-fluid {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
            flex: 1 0 auto;
        }

        .main-content {
            flex: 1 0 auto;
        }

        /* ========== FOOTER MODERNO ========== */
        .footer {
            background: linear-gradient(180deg, rgba(10, 10, 10, 0) 0%, rgba(10, 10, 10, 0.95) 20%, rgba(10, 10, 10, 1) 100%);
            backdrop-filter: blur(20px);
            border-top: 2px solid rgba(229, 9, 20, 0.3);
            padding: 3rem 0 1.5rem;
            margin-top: auto;
            flex-shrink: 0;
            position: relative;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(229, 9, 20, 0.5) 50%, 
                transparent 100%);
        }

        .footer-brand {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #e50914 0%, #ff4057 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .footer-brand i {
            background: linear-gradient(135deg, #e50914, #ff4057);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 1.75rem;
        }

        .footer-description {
            color: var(--text-muted);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            max-width: 400px;
        }

        .footer-title {
            color: var(--text-light);
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 1rem;
            position: relative;
            padding-bottom: 0.5rem;
        }

        .footer-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 2px;
            background: linear-gradient(90deg, #e50914, #ff4057);
            border-radius: 2px;
        }

        .footer-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .footer-links li {
            margin-bottom: 0.75rem;
        }

        .footer-links a {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .footer-links a:hover {
            color: #e50914;
            transform: translateX(5px);
        }

        .footer-links a i {
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }

        .footer-links a:hover i {
            transform: scale(1.2);
        }

        .social-links {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .social-link {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(229, 9, 20, 0.1);
            border: 2px solid rgba(229, 9, 20, 0.3);
            border-radius: 50%;
            color: var(--text-light);
            font-size: 1.25rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
        }

        .social-link:hover {
            background: linear-gradient(135deg, #e50914, #ff4057);
            border-color: #e50914;
            color: white;
            transform: translateY(-5px) rotate(360deg);
            box-shadow: 0 10px 25px rgba(229, 9, 20, 0.5);
        }

        .footer-bottom {
            border-top: 1px solid rgba(229, 9, 20, 0.2);
            padding-top: 1.5rem;
            margin-top: 2rem;
            text-align: center;
        }

        .footer-bottom p {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin: 0.5rem 0;
        }

        .footer-bottom strong {
            background: linear-gradient(135deg, #e50914, #ff4057);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 600;
        }

        /* ========== ANIMACIONES ========== */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.6s ease-out;
        }

        /* ========== RESPONSIVE ========== */
        @@media (max-width: 991px) {
            .navbar-collapse {
                background: rgba(10, 10, 10, 0.98);
                padding: 1rem;
                border-radius: 15px;
                margin-top: 1rem;
                border: 1px solid rgba(229, 9, 20, 0.2);
            }

            .nav-link {
                margin: 0.25rem 0;
            }

            .container-fluid {
                padding: 1rem;
            }

            .footer {
                padding: 2rem 0 1rem;
            }

            .footer-description {
                max-width: 100%;
            }
        }

        @@media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.5rem;
            }

            .social-link {
                width: 40px;
                height: 40px;
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" id="mainNavbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-film"></i>
                    <span>StreamFlix</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-fill"></i>
                                <span>Inicio</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contenidos" asp-action="Index">
                                <i class="bi bi-collection-play-fill"></i>
                                <span>Contenidos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Actores" asp-action="Index">
                                <i class="bi bi-people-fill"></i>
                                <span>Actores</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Generos" asp-action="Index">
                                <i class="bi bi-tags-fill"></i>
                                <span>Géneros</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Estadisticas" asp-action="Index">
                                <i class="bi bi-bar-chart-fill"></i>
                                <span>Estadísticas</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="page-wrapper">
        <div class="container-fluid" style="margin-top: 150px;">
            <main role="main" class="pb-5 fade-in-up main-content">
                @RenderBody()
            </main>
        </div>

        <footer class="footer-bottom">
            <div class="container">
                <div class="row g-4">
                    <!-- Columna 1: Marca y Descripción -->
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-brand">
                            <i class="bi bi-film"></i>
                            <span>StreamFlix</span>
                        </div>
                        <p class="footer-description">
                            Tu plataforma de streaming favorita. Disfruta de miles de películas, series y contenido 
                            exclusivo. Entretenimiento ilimitado al alcance de tu mano.
                        </p>
                        <div class="social-links">
                            <a href="#" class="social-link" aria-label="GitHub" title="GitHub">
                                <i class="bi bi-github"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="LinkedIn" title="LinkedIn">
                                <i class="bi bi-linkedin"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="Twitter" title="Twitter">
                                <i class="bi bi-twitter-x"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="Instagram" title="Instagram">
                                <i class="bi bi-instagram"></i>
                            </a>
                            <a href="#" class="social-link" aria-label="Email" title="Email">
                                <i class="bi bi-envelope-fill"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Columna 2: Navegación Rápida -->
                    <div class="col-lg-2 col-md-6">
                        <h5 class="footer-title">Navegación</h5>
                        <ul class="footer-links">
                            <li>
                                <a asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Inicio
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Contenidos" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Contenidos
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Actores" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Actores
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Generos" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Géneros
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Estadisticas" asp-action="Index">
                                    <i class="bi bi-chevron-right"></i> Estadísticas
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Columna 3: Categorías -->
                    <div class="col-lg-3 col-md-6">
                        <h5 class="footer-title">Categorías</h5>
                        <ul class="footer-links">
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Acción
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Comedia
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Drama
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Ciencia Ficción
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Terror
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Columna 4: Información -->
                    <div class="col-lg-3 col-md-6">
                        <h5 class="footer-title">Información</h5>
                        <ul class="footer-links">
                            <li>
                                <a asp-controller="Home" asp-action="Privacy">
                                    <i class="bi bi-chevron-right"></i> Privacidad
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Términos de Uso
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Ayuda
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Contacto
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="bi bi-chevron-right"></i> Acerca de
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('mainNavbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Active nav link
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
